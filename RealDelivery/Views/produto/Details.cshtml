@model RealDelivery.produto

@{
    Layout = "~/Views/Administrador/_LayoutPanel.cshtml";
    ViewBag.Title = "Detalhes do produto";
}

<h2 class="text-center text-uppercase mt-2">Detalhes do produto</h2>

<div>
    <h4 class=" mt-3">Detalhes do cadastro do produto</h4>
    <hr />
    <table class="table table-hover table-bordered">
        <tr>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.produto_nome)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.produto_preco)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.produto_custo)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.produto_ativo)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.produto_desc)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.produto_img)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.grupo.grupo_nome)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayNameFor(model => model.impress.impress_cod)
            </td>
        </tr>
        <tr>
            <td class="text-center align-middle">
                @Html.DisplayFor(model => model.produto_nome)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(model => model.produto_preco)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(model => model.produto_custo)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(model => model.produto_ativo)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(model => model.produto_desc)
            </td>
            <td class="text-center align-middle">
                @if (Model.produto_img != null)
                {
                    <img src="@Model.produto_img" alt="@Model.produto_img image" class="img-thumbnail" style="width:128px;height:128px;" />
                }
                else
                {
                    <img src="/Imagem/sem-foto.png" alt=" image" class="img-thumbnail" style="width:128px;height:128px;" />
                }
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(model => model.grupo.grupo_nome)
            </td>
            <td class="text-center align-middle">
                @Html.DisplayFor(model => model.impress.impress_cod)
            </td>
        </tr>
    </table>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.produto_cod }, new { @class = "btn btn-success", @style = "width: 116px;" })
    @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary", @style = "width: 116px;" })
</p>

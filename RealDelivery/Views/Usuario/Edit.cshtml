@model RealDelivery.usuario

@{
    ViewBag.Title = "Editar usuário";
    Layout = "~/Views/Administrador/_LayoutPanel.cshtml";
}

<h2 class="text-center text-uppercase mt-2">Editar usuário</h2>


@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <h4 class=" mt-3">Editar informações do usuário</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.usuario_cod)
        @Html.HiddenFor(model => model.usuario_senha)

        <div class="form-group">
            @Html.LabelFor(model => model.usuario_email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.usuario_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuario_email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.usuario_nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.usuario_nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuario_nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.usuario_cel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.usuario_cel, new { htmlAttributes = new { type = "tel", @class = "form-control" , size="20" , maxlength="15" , onkeypress="mascara(this)" } })
                @Html.ValidationMessageFor(model => model.usuario_cel, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gravar" class="btn btn-success mr-2" style="width: 116px;" />
                @{
                    string cod = Html.DisplayFor(model => model.usuario_cod).ToString();
                    @Html.ActionLink("Alterar senha", "EditPassword", new { id = cod }, new { @class = "btn btn-danger  mr-2", @style = "width: 116px;" })
                }
                @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary", @style = "width: 116px;" })
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function mascara(telefone) {
        if (telefone.value.length == 0)
            telefone.value = '(' + telefone.value;
        if (telefone.value.length == 3)
            telefone.value = telefone.value + ') ';

        if (telefone.value.length == 10)
            telefone.value = telefone.value + '-';

    }
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

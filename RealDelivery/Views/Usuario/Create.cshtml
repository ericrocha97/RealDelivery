@model RealDelivery.usuario

@{
    ViewBag.Title = "Adicionar usuário";
    Layout = "~/Views/Administrador/_LayoutPanel.cshtml";
}

<h2 class="text-center text-uppercase mt-2">Adicionar usuário</h2>


@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <h4 class=" mt-3">Adicionar novos usuários</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.usuario_email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.usuario_email, new { type = "email", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.usuario_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usuario_senha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.usuario_senha, new { type = "password", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.usuario_senha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usuario_nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.usuario_nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuario_nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usuario_cel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.usuario_cel, new { type = "tel", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.usuario_cel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success mr-2" style="width: 116px;" />
                @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary", @style = "width: 116px;" })
            </div>
        </div>
    </div>
}


@section Scripts {
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

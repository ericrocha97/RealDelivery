@model IEnumerable<RealDelivery.produto>

@{
    ViewBag.Title = "Produtos";

}
<link href="~/Content/css/product.css" rel="stylesheet" />
<a href="@Request.UrlReferrer" class="btn btn-danger float-left">Voltar</a>
<h2 class="text-center text-uppercase mt-2">Cardápio</h2>



<div id="products" class="text-center mt-2">
    <ul class="">
        @foreach (var item in Model)
        {
            <li>
                <div id="img">
                    @if (item.produto_img != null)
                    {
                        <img src="@Html.DisplayFor(modelItem => item.produto_img)" alt=" image" class="img-thumbnail" style="width:128px;height:128px;" />
                    }
                    else
                    {
                        <img src="/Imagem/sem-foto.png" alt=" image" class="img-thumbnail" style="width:128px;height:128px;" />
                    }
                </div>
                <div id="product-dados">
                    <div id="product-name">
                        <strong>@Html.DisplayFor(modelItem => item.produto_nome)</strong>
                    </div>
                    <div id="product-desc" class="text-secondary">
                        @if (item.produto_desc != null)
                        {
                            @Html.DisplayFor(modelItem => item.produto_desc)

                        }
                        else
                        {
                            <p> </p>
                        }


                    </div>
                </div>
                <div id="product-price">
                    <strong>@Html.DisplayFor(modelItem => item.produto_preco)</strong>
                </div>
                <div id="product-action">
                    @Html.ActionLink("Adicionar ao carrinho", "add_prod", "Carrinho", new { id_prod = item.produto_cod, quantidade = 1 }, new { @class = "btn btn-info" })

                </div>
            </li>


        }
    </ul>

</div>

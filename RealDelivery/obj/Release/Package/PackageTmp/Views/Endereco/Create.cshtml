                @Html.EditorFor(model => model.endereco_uf, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.endereco_uf, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gravar" class="btn btn-success mr-2" style="width: 116px;" />
                @Html.ActionLink("Voltar", "Panel", "Cliente", new { id = Model.cliente_cod }, new { @class = "btn btn-primary", @style = "width: 116px;" })
            </div>
        </div>

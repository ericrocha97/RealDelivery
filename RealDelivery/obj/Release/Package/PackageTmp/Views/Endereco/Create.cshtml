@model RealDelivery.endereco

@{
    ViewBag.Title = "Adicionar Endereço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-uppercase mt-2">Adicionar Endereço</h2>


@model RealDelivery.pedido
@{
    ViewBag.Title = "Concluir Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>


<h2 class="text-center text-uppercase mt-2">Concluir Pedido</h2>

@using (Html.BeginForm("FinalizarPedido", "Pedido", FormMethod.Post))
{
    <h4 class=" mt-3">Escolher forma de pagamento</h4>
    <hr />



    <div class="form-check">
        @Html.RadioButton("pedido_fpgto", "0", true, new { htmlAttributes = new { @class = "form-check-input" } })
        <label class="form-check-label">Dinheiro <i class="far fa-money-bill-alt"></i> </label>
    </div>
    <div class="form-check">
        @Html.RadioButton("pedido_fpgto", "1", false, new { htmlAttributes = new { @class = "form-check-input" } })
        <label class="form-check-label">Crédito <i class="far fa-credit-card"></i></label>
    </div>
    <div class="form-check">
        @Html.RadioButton("pedido_fpgto", "2", false, new { htmlAttributes = new { @class = "form-check-input" } })
        <label class="form-check-label">Débito <i class="fas fa-credit-card"></i></label>
    </div>
    <div class="camposExtras">
        <div class="form-group">
            @Html.LabelFor(model => model.pedido_troco, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pedido_troco, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pedido_troco, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.pedido_obs, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.pedido_obs, new { style = "resize: none", rows = "5", cols = "50", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.pedido_obs, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Finalizar Pedido" class="btn btn-success" />
        </div>
    </div>
}



<script type="text/javascript">
    $('input[name="pedido_fpgto"]').change(function () {
        if ($('input[name="pedido_fpgto"]:checked').val() === "0") {
            $('.camposExtras').show();
        } else {
            $('.camposExtras').hide();
        }
    });
</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

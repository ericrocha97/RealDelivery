@model RealDelivery.grupo

@{
    Layout = "~/Views/Administrador/_LayoutPanel.cshtml";
    ViewBag.Title = "Editar Grupo";
}

<h2 class="text-center text-uppercase mt-2">Editar Grupo</h2>


@using (Html.BeginForm())
{

<div class="form-horizontal">
    <h4 class=" mt-3">Edite as informações do grupo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.grupo_cod)

    <div class="form-group">
        @Html.LabelFor(model => model.grupo_nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.grupo_nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.grupo_nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.grupo_ativo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="checkbox" name="grupo_ativo" class="form-check" value="S" checked />
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.grupo_desc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.grupo_desc, new { style = "resize: none", rows = "5", cols = "50", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.grupo_desc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="custom-file">
            <div class="col-md-10">
                <label class="btn btn-primary" for="img_grupo">Escolher a imagem do grupo...</label>
                <input type="file" name="img_grupo" class="invisible" id="img_grupo" accept="image/*">
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Gravar" class="btn btn-success mr-2" style="width: 116px;" />
            @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary", @style = "width: 116px;" })
        </div>
    </div>
</div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

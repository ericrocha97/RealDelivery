@model RealDelivery.usuario

@{
    ViewBag.Title = "Editar senha do usuário";
    Layout = "~/Views/Administrador/_LayoutPanel.cshtml";
}

<h2 class="text-center text-uppercase mt-2">Editar senha do usuário</h2>


@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <h4 class=" mt-3">Editar senha do usuário: @Html.DisplayFor(model => model.usuario_nome) </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.usuario_cod)
        @Html.HiddenFor(model => model.usuario_email)
        @Html.HiddenFor(model => model.usuario_nome)
        @Html.HiddenFor(model => model.usuario_cel)
        <div class="form-group">
            <label for="usuario_senha" class="control-label col-md-2">Senha atual</label>
            <div class="col-md-10">
                <input type="password" name="usuario_senha" class="form-control" />
                @Html.ValidationMessageFor(model => model.usuario_senha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="senha_nova" class="control-label col-md-2">Senha nova</label>
            <div class="col-md-10">
                <input type="password" name="senha_nova" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="senha_nova_confirm" class="control-label col-md-2">Confirme a senha nova</label>
            <div class="col-md-10">
                <input type="password" name="senha_nova_confirm" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Alterar senha" class="btn btn-success mr-2" style="width: 116px;" />
                @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary", @style = "width: 116px;" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
